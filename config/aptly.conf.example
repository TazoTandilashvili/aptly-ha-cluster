# Example configuration for Aptly

# This file contains the basic configuration settings for Aptly.

# The directory where Aptly will store its data
rootDir: "/var/aptly"

# The directory where Aptly will store its snapshots
snapshotRoot: "/var/aptly/snapshots"

# The directory where Aptly will store its publishings
publishRoot: "/var/aptly/publish"

# The directory where Aptly will store its temporary files
tempDir: "/var/aptly/tmp"

# The GPG key ID to use for signing packages
gpgKey: "YOUR_GPG_KEY_ID"

# The default distribution to use for publishing
defaultDistribution: "jammy"

# The default component to use for publishing
defaultComponent: "main"

# The default architecture to use for publishing
defaultArchitecture: "amd64"
